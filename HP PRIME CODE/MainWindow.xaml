                                        <!-- Texto que muestra la cantidad de errores -->
                                        <TextBlock x:Name="LabelLinCol" FontSize="11" Text="Errores: 0" Foreground="{DynamicResource ColorIconNormal}" VerticalAlignment="Center" HorizontalAlignment="Left" />
                                    </StackPanel>
                                </Button>
                            </Grid>

                        </Grid>

                        <!-- GridSplitter para ajustar el tamaño de las filas -->
                        <GridSplitter 
                            Grid.Row="1" 
                            Height="5" 
                            HorizontalAlignment="Stretch" 
                            ResizeDirection="Rows">
                            <GridSplitter.Style>
                                <Style TargetType="{x:Type GridSplitter}">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource ColorContextMouseOver}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </GridSplitter.Style>
                        </GridSplitter>
                  


                        <Border Name="GridErrorPanel"  Grid.Row="2" Visibility="Visible"  BorderThickness="0 1 0 0" Background="{DynamicResource EditorFillColor}" BorderBrush="{DynamicResource ColorLineTools}">
