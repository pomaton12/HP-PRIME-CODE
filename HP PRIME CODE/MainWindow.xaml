                                    <DataGridTextColumn Header="Línea" Binding="{Binding Line}" Width="65" />
                                    <DataGridTextColumn Header="Columna" Binding="{Binding Column}" Width="85" />
                                    <DataGridTextColumn Header="Mensaje" Binding="{Binding Message}" Width="*" />
                                </DataGrid.Columns>
                            </DataGrid>
                                
                        </Border>
    
                    </Grid>

                    <Grid Grid.Column="1" x:Name="PanelConfiguracion"  Width="335" Visibility="Collapsed">

